<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capstone.locker.register.owner.OwnerActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#dddddd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner 계정 등록"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:weightSum="10"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="연결된 잠금장치 : "/>

            <TextView
                android:id="@+id/moduleIdentiName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.4"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="1232132131"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="Owner계정 인증 : "/>

            <EditText
                android:id="@+id/ownerPwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:singleLine="true"
                android:hint="password"
                android:maxLength="15"/>

            <Button
                android:id="@+id/requestAuth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:text="요청"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="이름 : "/>

            <EditText
                android:id="@+id/moduleNickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.4"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:singleLine="true"
                android:text=""
                android:maxLength="10"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="아이콘 설정 : "/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="6.4"
                android:weightSum="10">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="7dp"
                        android:background="@drawable/icon_background"
                        android:src="@drawable/tempimg"
                        />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="7dp"
                        android:src="@drawable/tempimg2"
                        />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="7dp"
                        android:src="@drawable/tempimg3"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="등록 일자 : "/>

            <TextView
                android:id="@+id/registerDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.4"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="위치 알림 설정 : "/>

            <LinearLayout
                android:id="@+id/pushOn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:background="#E2CAAE"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="ON"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pushOff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.2"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="OFF"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/completeRegister"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록"/>

    </LinearLayout>

</LinearLayout>
